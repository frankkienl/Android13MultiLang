<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="32dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/main_subtitle"
            android:textSize="20dp"
            android:text="@string/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/main_language"
            android:textSize="26dp"
            android:text="@string/current_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/main_btn_english"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set to English" />

        <Button
            android:id="@+id/main_btn_dutch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set to Dutch" />
        <Button
            android:id="@+id/main_btn_flemish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set to Flemish" />

        <Button
            android:id="@+id/main_btn_german"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set to German" />

        <Button
            android:id="@+id/main_btn_polish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set to Polish" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>